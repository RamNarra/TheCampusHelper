rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isAuthenticated() {
      return request.auth != null;
    }

    // SECURITY: Admin emails are managed in the Firebase Console to prevent 
    // exposing them in public GitHub repositories.
    // When deploying via CLI, replace the list below with your actual admin emails.
    function isAdmin() {
      return isAuthenticated() && 
        (request.auth.token.email in ["admin@example.com", "yours@example.com"]);
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
    }

    match /resources/{resourceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}